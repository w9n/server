                            }
                        ]
                    }
                }
            },
            "ClearAtTimeType": {
                "enum": [
                    "day",
                    "week"
                ],
                "type": "string"
            },
            "OCSMeta": {
                "type": "object",
                "required": [
                    "status",
                    "statuscode"
                ],
                "properties": {
                    "status": {
                        "type": "string"
                    },
                    "statuscode": {
                        "type": "integer"
                    },
                    "message": {
                        "type": "string"
                    },
                    "totalitems": {
                        "type": "string"
                    },
                    "itemsperpage": {
                        "type": "string"
                    }
                }
            },
            "Predefined": {
                "required": [
                    "id",
                    "icon",
                    "message"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "clearAt": {
                        "$ref": "#/components/schemas/ClearAt"
                    },
                    "visible": {
                        "type": "boolean"
                    }
                }
            },
            "Private": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Public"
                    },
                    {
                        "required": [
                            "messageIsPredefined",
                            "statusIsUserDefined"
                        ],
                        "type": "object",
                        "properties": {
                            "messageId": {
                                "type": "string"
                            },
                            "messageIsPredefined": {
                                "type": "boolean"
                            },
                            "statusIsUserDefined": {
                                "type": "boolean"
                            }
                        }
                    }
                ]
            },
            "Public": {
                "required": [
                    "userId",
                    "status"
                ],
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "clearAt": {
                        "oneOf": [
                            {
                                "type": "integer",
                                "format": "int64"
                            },
                            {
                                "$ref": "#/components/schemas/ClearAt"
                            }
                        ]
                    },
                    "status": {
