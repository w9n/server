                        "type": "object",
                        "properties": {
                            "enabled": {
                                "type": "boolean"
                            },
                            "supports_emoji": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            },
            "ClearAt": {
                "required": [
                    "type",
                    "time"
                ],
                "type": "object",
                "properties": {
                    "type": {
                        "enum": [
                            "period",
                            "end-of"
                        ],
                        "type": "string"
                    },
                    "time": {
                        "oneOf": [
                            {
                                "type": "integer",
                                "format": "int64"
                            },
